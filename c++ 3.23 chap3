3.6
#include<iostream>
using namespace std;
int main()
{
	string s("hello world!");
	for (auto &a : s)
		a = 'X';
	cout << s << endl;
	return 0;
}


3.7
#include<iostream>
using namespace std;
int main()
{
	string s("hello world!");
	for (char a : s)
		a = 'X';
	cout << s << endl;
	return 0;
}




3.10
#include<iostream>
using namespace std;
int main()
{
	string s("hello world!");
	string t;
	for(auto a :s)
		if(!ispunct(a))
			t += a;
	cout << t << endl;
	return 0;
}




