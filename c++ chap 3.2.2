/*
**一次读入一个词
*/

#include <iostream>
using namespace std;
int main()
{
    string s;
    while(cin >> s)
        cout << s << endl;
    return 0;
}

/*
**一次输入一整行
*/

#include <iostream>
using namespace std;
int main()
{
    string s;
    while(getline(cin, s))
        cout << s << endl;
    return 0;
}






